<main id="main" class="main ">
   
  <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col"> Product Name</th>
      <th scope="col">Brand name</th>
      <th scope="col">Price</th>
       <th scope="col">size</th>
       <th scope="col">category</th>
     
       <th scope="col">Image</th>
       
      <th scope="col"> Manage</th>
    </tr>
  </thead>
  <tbody>
    {{#each data}}
    <tr>
      <td>{{inc @index}}</td>
     
      <td>{{this.Pname}}</td>
      <td>{{this.PBname}}</td>
      <td>{{this.Pprice}}</td>
      <td>{{this.Psize}}</td>
      <td>{{this.pcategory}}</td>
      <td><img style="height:50px ;" src="/pictures/product/{{this.img.[0]}}" alt=""></td>
      <td>
          <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary" >Edit</a>
           {{!-- <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" style="width: 5px;">Confirm</a> --}}
           <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#basicModal{{this._id}}">Delete</button>
          
      </td>

    </tr>
    </button>



    <div class="modal fade" id="basicModal{{this._id}}" tabindex="-1">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title">Confirmation</h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                      Are you sure you want to delete {{this.Pname}}?
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                      <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" style="width: 5px;">Confirm</a>
                      {{!-- <button type="button" class="btn btn-primary">Confirm</button> --}}
                    </div>
                  </div>
                </div>
              </div>
              
   {{/each}}
    
